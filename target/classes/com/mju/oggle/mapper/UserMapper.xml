	<resultMap id="user" type="com.oggle.bean.User">
	</resultMap>
	
	<insert id="insertUser" parameterType="user">
		INSERT INTO User (uid,pwd,name,email,state,nonce)
		VALUES(#{uid},#{pwd},#{name},#{email},#{state},#{nonce})
	</insert>

	<select id="selectUser" parameterType="String" resultType="User">
		SELECT * FROM User 
		WHERE uid = #{uid}
	</select>
	
	<select id="getUserList" resultType="User">
		SELECT * FROM User; 
	</select>
	
	<update id="changeUserState" parameterType="String">
		UPDATE User SET state='y' 
		WHERE uid = #{uid};
	</update>
	
	
	
</mapper>